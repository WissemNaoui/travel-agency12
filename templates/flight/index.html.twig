{% extends 'base.html.twig' %}

{% block title %}Flight Search{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .search-form {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 30px;
        }
        .flight-card {
            margin-bottom: 20px;
            transition: transform 0.2s;
        }
        .flight-card:hover {
            transform: translateY(-5px);
        }
        .loading {
            display: none;
            text-align: center;
            padding: 20px;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchForm = document.getElementById('flight-search-form');
            const resultsContainer = document.getElementById('flight-results');
            const loadingIndicator = document.getElementById('loading-indicator');

            searchForm.addEventListener('submit', function(e) {
                e.preventDefault();
                const formData = new FormData(searchForm);
                const searchParams = new URLSearchParams(formData);

                loadingIndicator.style.display = 'block';
                resultsContainer.style.opacity = '0.5';

                fetch(`{{ path('app_flight_search') }}?${searchParams.toString()}`, {
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                .then(response => response.text())
                .then(html => {
                    resultsContainer.innerHTML = html;
                    resultsContainer.style.opacity = '1';
                    loadingIndicator.style.display = 'none';
                })
                .catch(error => {
                    console.error('Error:', error);
                    loadingIndicator.style.display = 'none';
                    resultsContainer.style.opacity = '1';
                });
            });
        });
    </script>
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Flight Search</h1>

        <div class="search-form mb-4">
            {{ include('flight/_search_form.html.twig') }}
        </div>

        <div class="mb-3">
            <p class="text-muted">
                Showing {{ pagination.currentPageNumber }} of {{ pagination.pageCount }} pages
                ({{ pagination.totalItemCount }} flights total)
            </p>
        </div>

        <div id="loading-indicator" class="loading">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>

        <div id="flight-results">
            {% for flight in pagination %}
                <div class="card flight-card mb-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-plane text-primary"></i>
                                {{ flight.airline }}
                            </h5>
                            <span class="badge bg-primary">{{ flight.flightNumber }}</span>
                        </div>
                        <div class="row mb-3">
                            <div class="col-5">
                                <div class="text-muted">From</div>
                                <strong>{{ flight.origin }}</strong>
                                <div class="small">{{ flight.departureTime|date('H:i') }}</div>
                            </div>
                            <div class="col-2 text-center">
                                <i class="fas fa-arrow-right text-muted"></i>
                            </div>
                            <div class="col-5">
                                <div class="text-muted">To</div>
                                <strong>{{ flight.destination }}</strong>
                                <div class="small">{{ flight.arrivalTime|date('H:i') }}</div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-calendar-alt text-muted"></i>
                                <span class="ms-1">{{ flight.departureTime|date('d M Y') }}</span>
                            </div>
                            <div>
                                <i class="fas fa-users text-muted"></i>
                                <span class="ms-1">{{ flight.availableSeats }} seats</span>
                            </div>
                            <div>
                                <strong class="text-primary">${{ flight.price|number_format(2) }}</strong>
                            </div>
                        </div>
                        <div class="mt-3">
                            <a href="{{ path('app_flight_show', {'id': flight.id}) }}" class="btn btn-outline-primary">View Details</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="alert alert-info">
                    No flights found matching your criteria.
                </div>
            {% endfor %}
        </div>

        <div class="d-flex justify-content-center mt-4">
            {{ knp_pagination_render(pagination, null, {}, {
                'align': 'center',
                'size': 'large',
                'rounded': true
            }) }}
        </div>
    </div>
{% endblock %}
