{% if flights is defined and flights|length > 0 %}
    <div class="row">
        {% for flight in flights %}
            <div class="col-md-6">
                <div class="card flight-card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-plane text-primary"></i>
                                {{ flight.airline }}
                            </h5>
                            <span class="badge bg-primary">{{ flight.flightNumber }}</span>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-5">
                                <div class="text-muted">From</div>
                                <strong>{{ flight.origin }}</strong>
                                <div class="small">{{ flight.departureTime|date('H:i') }}</div>
                            </div>
                            <div class="col-2 text-center">
                                <i class="fas fa-arrow-right text-muted"></i>
                            </div>
                            <div class="col-5">
                                <div class="text-muted">To</div>
                                <strong>{{ flight.destination }}</strong>
                                <div class="small">{{ flight.arrivalTime|date('H:i') }}</div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-calendar-alt text-muted"></i>
                                <span class="ms-1">{{ flight.departureTime|date('d M Y') }}</span>
                            </div>
                            <div>
                                <i class="fas fa-users text-muted"></i>
                                <span class="ms-1">{{ flight.availableSeats }} seats</span>
                            </div>
                            <div>
                                <strong class="text-primary">${{ flight.price|number_format(2) }}</strong>
                            </div>
                        </div>

                        <div class="mt-3">
                            <a href="{{ path('app_flight_show', {'id': flight.id}) }}" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-info-circle"></i> Details
                            </a>
                            <a href="#" class="btn btn-primary btn-sm">
                                <i class="fas fa-ticket-alt"></i> Book Now
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% else %}
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No flights found matching your criteria. Please try different search parameters.
    </div>
{% endif %}
