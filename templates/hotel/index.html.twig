{% extends 'base.html.twig' %}

{% block title %}Hotels{% endblock %}

{% block body %}
    <div class="container my-4">
        <h1 class="mb-4">Our Hotels</h1>

        {% if hotels|length > 0 %}
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                {% for hotel in hotels %}
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">{{ hotel.name }}</h5>
                                <div class="mb-2">
                                    <span class="badge bg-warning text-dark">{{ hotel.rating }} Stars</span>
                                    <span class="badge bg-info">{{ hotel.city }}, {{ hotel.country }}</span>
                                </div>
                                <p class="card-text">{{ hotel.description|length > 150 ? hotel.description|slice(0, 150) ~ '...' : hotel.description }}</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="text-primary fw-bold">â‚¬{{ hotel.pricePerNight }} / night</span>
                                    <span class="text-muted">{{ hotel.availableRooms }} rooms left</span>
                                </div>
                            </div>
                            <div class="card-footer bg-transparent">
                                <div class="d-grid">
                                    <a href="{{ path('app_hotel_show', {'id': hotel.id}) }}" class="btn btn-outline-primary">View Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                No hotels available at the moment.
            </div>
        {% endif %}
    </div>
{% endblock %}
