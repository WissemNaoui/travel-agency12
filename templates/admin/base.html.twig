{% extends 'base.html.twig' %}

{% block stylesheets %}
<style>
    .admin-sidebar {
        min-height: calc(100vh - 56px);
        background-color: #f8f9fa;
        border-right: 1px solid #dee2e6;
        padding: 20px 0;
    }
    .admin-sidebar .nav-link {
        color: #333;
        padding: 8px 20px;
    }
    .admin-sidebar .nav-link:hover {
        background-color: #e9ecef;
    }
    .admin-sidebar .nav-link.active {
        background-color: #0d6efd;
        color: white;
    }
    .admin-content {
        padding: 20px;
    }
</style>
{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 admin-sidebar">
            <div class="position-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') == 'app_admin_dashboard' %}active{% endif %}" 
                           href="{{ path('app_admin_dashboard') }}">
                            <i class="fas fa-tachometer-alt me-2"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') == 'app_admin_users' %}active{% endif %}" 
                           href="{{ path('app_admin_users') }}">
                            <i class="fas fa-users me-2"></i>
                            Users
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') == 'app_admin_packages' %}active{% endif %}" 
                           href="{{ path('app_admin_packages') }}">
                            <i class="fas fa-box me-2"></i>
                            Packages
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') == 'app_admin_bookings' %}active{% endif %}" 
                           href="{{ path('app_admin_bookings') }}">
                            <i class="fas fa-calendar-check me-2"></i>
                            Bookings
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 admin-content">
            {% block admin_content %}{% endblock %}
        </main>
    </div>
</div>
{% endblock %}
